{
  "version": "1.0.0",
  "compilerOptions": {
    "lib": [
      "es2015.promise",
      "scripthost",
      "es2016"
    ],
    "module": "esnext",
    "noImplicitAny": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017",
    "experimentalDecorators": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "cacheDirectory": ".cache"
  },
  "include": [
    "EvoMp/*/Client/*.ts"
  ]
}
