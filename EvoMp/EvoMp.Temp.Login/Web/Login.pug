
<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet", href="Login.scss")
    script(src="./Login.ts")
  body
    .pageloader.pageloader__active#pageloader
    form.login__form.box(onsubmit="handleLogin(this); return false;")
      .field.control.has-icons-left
        input.input(type="text", name="name" placeholder="Username" required)
        span.icon.is-left
          i.ion-lock-combination
      .field.control.has-icons-left(style='margin-bottom: calc(1.5rem + 24px)')
        input.input(type="password", name="password" placeholder="Password" required)
        span.icon.is-left
          i.ion-person

      input#submit.button.is-primary(type="submit", value="Submit")

    script.
      document.addEventListener('DOMContentLoaded', () => {
        try {
          resourceEval(`resource.CefLoadHandlerSingleton.doneLoading('Login')`)
        } catch (error) {
          console.warn('resourceEval not supported!')
        }
      })
